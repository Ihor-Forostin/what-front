pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        sh 'npm config ls'
        sh 'npm install'
        sh 'npm audit fix --force'
        sh 'npm run build'
      }
    }
  }
  post {
    failure {
      mail to: xiaomibestuser@gmail.com, subject: ‘The Pipeline failed :(‘
      }
  
  }
}
